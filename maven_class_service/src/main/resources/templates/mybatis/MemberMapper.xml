<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.pagooo.maven_class_service.member.mapper.MemberMapper">

    <select id="selectListCount"
            parameterType="org.pagooo.maven_class_service.admin.model.MemberParam"
            resultType="long"
    >
        select count(*) from member
        <if test="searchType != null and searchValue != null">

            <choose>
                <when test="searchType == 'userId'">
                    where user_id like concat('%',#{searchValue},'%')
                </when>
                <when test="searchType == 'userName'">
                    where user_name like concat('%',#{searchValue},'%')
                </when>
                <when test="searchType == 'phone'">
                    where phone like concat('%',#{searchValue},'%')
                </when>
                <otherwise>
                    where
                    (
                    user_id like concat('%',#{searchValue},'%')
                    or
                    user_name like concat('%',#{searchValue},'%')
                    or
                    phone like concat('%',#{searchValue},'%')
                    )
                </otherwise>
            </choose>
        </if>

    </select>


    <select id="selectList"
            parameterType="org.pagooo.maven_class_service.admin.model.MemberParam"
            resultType="org.pagooo.maven_class_service.member.dto.MemberDto">
        select * from member
        <if test="searchType != null and searchValue != null">

            <choose>
                <when test="searchType == 'userId'">
                    where user_id like concat('%',#{searchValue},'%')
                </when>
                <when test="searchType == 'userName'">
                    where user_name like concat('%',#{searchValue},'%')
                </when>
                <when test="searchType == 'phone'">
                    where phone like concat('%',#{searchValue},'%')
                </when>
                <otherwise>
                    where
                    (
                    user_id like concat('%',#{searchValue},'%')
                    or
                    user_name like concat('%',#{searchValue},'%')
                    or
                    phone like concat('%',#{searchValue},'%')
                    )
                </otherwise>
            </choose>
        </if>
        limit #{pageStart}, #{pageEnd}
    </select>
</mapper>